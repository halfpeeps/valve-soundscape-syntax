{
    "scopeName": "source.soundscape",
    "name": "Valve Soundscape",
    "patterns": [
        {
            "name": "entity.name.block.custom",
            "match": "^[a-zA-Z0-9_.]+(?=\\s*\\{)"
        },
        {
            "name": "keyword.control.soundscape",
            "match": "\\b(time|volume|pitch|position|attenuation|name|dsp|dsp_volume|dsp_spatial|fadetime|suppress_on_restore|positionoverride|ambientpositionoverride|channel|soundlevel)\\b"
        },
		{
            "name": "entity.name.type.play.soundscape",
            "match": "\\b(playrandom|playlooping|playsoundscape|rndwave)\\b"
        },
        {
            "name": "variable.wave.soundscape",
            "match": "\\b(?:wave|[A-Za-z0-9_/\\\\.-]+\\.(?:wav|mp3))\\b"
        },
        {
            "name": "string.path.wave.soundscape",
            "match": "\\b(?:VOL|PITCH|CHAN|SNDLVL)_[A-Za-z0-9_]+\\b"
        },
        {
            "name": "comment.line.double-slash.soundscape",
            "match": "//.*$"
        },
        {
            "name": "constant.numeric.soundscape",
            "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
            "name": "punctuation.section.block.soundscape",
            "match": "[{}]"
        },

        {
            "name": "entity.name.function.soundscape",
            "match": "\\b(generic\\.[a-zA-Z0-9_]+)\\b"
        },
        {
            "name": "entity.name.function.soundscape",
            "match": "\\b(city\\.[a-zA-Z0-9_]+)\\b"
        },
        {
            "name": "entity.name.function.soundscape",
            "match": "\\b(business\\.[a-zA-Z0-9_]+)\\b"
        },
        {
            "name": "entity.name.function.soundscape",
            "match": "\\b(forest\\.[a-zA-Z0-9_]+)\\b"
        },
        {
            "name": "entity.name.function.soundscape",
            "match": "\\b(subs\\.[a-zA-Z0-9_]+)\\b"
        }
    ]
}